%header.clearfix#nav-header
  /Header right block
  .col-md-5
    %nav{ :class => "navbar-default pull-left" }
      %button{ :class => "navbar-toggle collapsed", :type => "button", "data-toggle" => "offcanvas", "data-target" => "#bs-navbar-collapse-1", "area-expanded" => "false"}
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
  /Header right block
  .col-md-7
    %ul.pull-right
      - if user_signed_in?
        %li= link_to 'Edit my profile', edit_user_registration_path
        %li
          = link_to destroy_user_session_path, method: :delete do
            %span
              =fa_icon('sign-out')
            = t('sign_out')
      - else
        %li
          = link_to new_user_session_path do
            %span
              = fa_icon('sign-in')
            = t('sign_in')


:javascript
  $(document).ready(function () {
    //Для xs-устройств сворачиваем или разворачиваем меню
    $('[data-toggle="offcanvas"]').click(function () {
        $('#side-menu').toggleClass('hidden-xs');
    });
    //Показ или скрытие иконок для развернутого или скрытого меню
    $('[data-toggle="collapse"]').click(function() {
      var isExpanded = $(this).attr("aria-expanded");
      if (isExpanded == 'true') {
        $(this).children('.menu-down').show();
        $(this).children('.menu-up').hide();
      } else {
        $(this).children('.menu-down').hide();
        $(this).children('.menu-up').show();
      }
    });
  });
